{
    "name": "Pinpoint search",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "description": "Search the webpage for text within a specific area",
    "background": {
        "scripts": ["src/chrome/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "src/ui/popup.html"
    },
    "manifest_version": 2
}